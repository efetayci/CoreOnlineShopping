
@model CoreOnlineShopping.Models.Products 
@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Details of Product</h2>
<br />

<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Name"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Name" class="form-control" readonly placeholder="" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Price"></label>
                        </div>

                        <div class="col-8">
                            <input asp-for="Price" class="form-control" readonly />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="ProductColor"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="ProductColor" class="form-control" readonly />
                        </div>
                        <span asp-validation-for="ProductColor" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="ProductTypesId"></label>
                        </div>
                        <div class="col-8">
                            <select asp-for="ProductTypesId" asp-items="ViewBag.productTypeId" class="form-control" readonly></select>
                        </div>
                        <span asp-validation-for="ProductTypesId" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="SpecialTagId"></label>
                        </div>
                        <div class="col-8">
                            <select asp-for="SpecialTagId" asp-items="ViewBag.TagId" class="form-control" readonly></select>
                        </div>
                        <span asp-validation-for="SpecialTagId" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="IsAvilable"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="IsAvilable" class="" type="checkbox" readonly/>
                        </div>
                        <span asp-validation-for="IsAvilable" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                    </div>
                </div>
            </div>
            <div class="col-1">

            </div>
            <div class="col-3">
                <img src="@Model.Image" style="width:100%; border-radius:5px;border:1px solid #efefef" />
            </div>

        </div>
    </div>
</form>

@*save a abstıkça validation hatası veren texte curser koyma*@
@section Scripts{
    @{await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial.cshtml");}
}
