@model CoreOnlineShopping.Models.ButtonPartial

    <div class="btn btn-group">
        <a class="btn btn-success" style="color:white" asp-action="Edit" asp-controller="@Model.Name" asp-route-id="@Model.Id">
            Edit
            <i class="fas fa-edit"></i>
        </a>
        <a class="btn btn-danger" onclick="Get2(@Model.Id)">
            Delete
            <i class="fas fa-trash-alt"></i>
        </a>
        <a class="btn btn-info" asp-action="Details" asp-controller="@Model.Name" asp-route-id="@Model.Id">
            Details
            <i class="fas fa-info-circle"></i>
        </a>
    </div>
